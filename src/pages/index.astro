---
import Links from '../components/Links.svelte';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Links &middot; caro.fyi.">
	<main>
		<h1>Find Caro Online</h1>

		<Links />

	</main>
</Layout>

<style lang="postcss">
	:root {
		@apply m-auto p-6 max-w-prose text-center bg-slate-200;
	}
	h1 {
		@apply text-4xl font-bold text-violet-600 mb-6;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
